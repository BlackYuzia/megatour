<!DOCTYPE html>
<html ng-app="app">

<head>
    <title>Tony's Pizza</title>
    <link rel="stylesheet" href="/vendor/bootstrap/dist/css/bootstrap.min.css">
</head>

<body ng-controller="toursController">
    <div class="container">
        <div>
            <button ng-click="getTours()">Get</button>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-4" ng-repeat="t in model.tours">
                <div class="thumbnail">
                    <img src="https://placehold.it/242x200" alt="...">
                    <div class="caption">
                        <h3>{{{t.country}}}</h3>
                        <p>{{t.priceAdult}} {{t.priceKid}} {{t.isAvia}}</p>
                        <p>
                            <a href="#" class="btn btn-primary" role="button">Button</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/vendor/angular/angular.min.js"></script>
    <script src="/javascripts/index/app.js"></script>
    <script src="/javascripts/index/toursController.js"></script>
</body>

</html>